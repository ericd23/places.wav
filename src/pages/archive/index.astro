---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all archive entries, sorted by date (newest first)
const archives = await getCollection('archive');
archives.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Archive - Places" description="Photography, workshops, events, and historical documentation">
  <div class="p-4 max-w-2xl mx-auto">
    <h1 class="text-2xl mb-8">Archive</h1>
    
    <div class="space-y-4">
      {archives.map((item) => (
        <div class="border-b border-gray-200 pb-4">
          <div class="flex justify-between items-start mb-2">
            <div>
              <h2 class="text-lg mb-1">
                <a href={`/archive/${item.slug}`} class="hover:text-gray-600">
                  {item.data.title}
                </a>
              </h2>
              <p class="text-sm text-gray-600">{item.data.type}</p>
            </div>
            <span class="text-xs text-gray-500">
              {item.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short'
              })}
            </span>
          </div>
          <p class="text-xs text-gray-500 mt-2 mb-3">
            {item.data.description}
          </p>
          
          {item.data.tags && item.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {item.data.tags.map((tag) => (
                <a 
                  href={`/tags/${tag}`}
                  class="text-xs text-gray-500 hover:text-black"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>