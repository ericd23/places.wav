---
import Layout from '../../layouts/Layout.astro';
import EmbedPlayer from '../../components/EmbedPlayer.astro';
import TagList from '../../components/TagList.astro';
import { formatDate } from '../../utils/dateFormatter';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const archives = await getCollection('archive');
  return archives.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<Layout title={`${item.data.title} - Archive - Places`} variant="wide">
    <header class="mb-8">
      <h1 class="text-2xl mb-2">
        {item.data.title}
      </h1>
      <div class="text-sm text-gray-700 mb-4">
        {item.data.type}
      </div>
      <div class="text-xs text-gray-500 mb-6">
        {formatDate(item.data.date, 'long')}
      </div>
      <p class="text-xs text-gray-500 mb-4">
        {item.data.description}
      </p>
      
      <TagList tags={item.data.tags} class="flex flex-wrap gap-2 mb-8" />
    </header>

    {item.data.embed_url && (
      <EmbedPlayer url={item.data.embed_url} />
    )}

    <article class="markdown-body text-sm leading-relaxed text-black">
      <Content />
    </article>

</Layout>