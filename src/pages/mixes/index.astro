---

<Layout title="Mixes - Places" description="DJ mixes curated by the Places collective">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4">Mixes</h1>
      <p class="text-xl text-blue-700 max-w-3xl mx-auto">
        Curated DJ mixes from our collective and featured artists, 
        showcasing diverse electronic music genres
      </p>
    </div>

    <!-- Mixes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {mixes.map((mix) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow group">
          <!-- Mix Image Placeholder -->
          <div class="h-64 bg-gradient-to-br from-green-400 via-blue-500 to-purple-600 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
            <div class="absolute bottom-4 left-4 right-4">
              <div class="bg-white/90 backdrop-blur-sm rounded-lg p-3">
                <div class="text-sm text-gray-600 mb-1">
                  {mix.data.date.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long',
                    day: 'numeric'
                  })}
                </div>
                <h3 class="font-semibold text-gray-900 text-lg leading-tight">
                  {mix.data.title}
                </h3>
              </div>
            </div>
          </div>
          
          <!-- Mix Details -->
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <span class="text-lg font-medium text-blue-900">
                {mix.data.artist}
              </span>
              <span class="text-sm text-green-600 font-medium">
                Mix
              </span>
            </div>
            
            <!-- Tags -->
            {mix.data.tags && mix.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {mix.data.tags.map((tag) => (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Actions -->
            <div class="flex items-center justify-between">
              <a 
                href={mix.data.external_link || '#'} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-green-600 hover:text-green-700 font-medium text-sm transition-colors"
              >
                Listen â†’
              </a>
              <a 
                href={`/mixes/${mix.slug}`}
                class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors"
              >
                Details
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Empty State (when no mixes) -->
    {mixes.length === 0 && (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ðŸŽ§</div>
        <h3 class="text-xl font-medium text-blue-900 mb-2">No mixes yet</h3>
        <p class="text-blue-600">Check back soon for new content!</p>
      </div>
    )}
  </div>
</Layout>