---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all archive entries, sorted by date (newest first)
// const archives = await getCollection('archive');
// archives.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Placeholder data based on Places analysis
const archives = [
  {
    slug: 'triumvirate-photo',
    data: {
      title: 'Triumvirate Photo',
      type: 'photography',
      date: new Date('2024-06-01'),
      description: 'Photography series featuring model Paige Paton with 15 photographic images in a grid layout.',
      images: ['/placeholder-photo.jpg']
    }
  },
  {
    slug: 'workshop',
    data: {
      title: 'Hear It From the Front - DJ Workshops',
      type: 'workshop',
      date: new Date('2024-04-30'),
      description: 'DJ Workshop Cohort documentation. Three-month series with Hamilton Artists Inc. facilitated by Dunaway and Peachface Lovedeep.',
      images: ['/placeholder-workshop.jpg']
    }
  },
  {
    slug: 'music-for-thursday-july',
    data: {
      title: 'Music for Thursday - July',
      type: 'event',
      date: new Date('2024-07-15'),
      description: 'Music event archive featuring performances and community gathering documentation.',
      images: ['/placeholder-event.jpg']
    }
  }
];
---

<Layout title="Archive - Places" description="Photography, workshops, events, and historical documentation">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4">Archive</h1>
      <p class="text-xl text-blue-700 max-w-3xl mx-auto">
        Documentation of workshops, events, photography, and community activities 
        that capture the spirit and growth of our collective
      </p>
    </div>

    <!-- Filter Tabs -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="px-6 py-2 rounded-full bg-blue-100 text-blue-900 font-medium hover:bg-blue-200 transition-colors">
        All
      </button>
      <button class="px-6 py-2 rounded-full text-blue-700 hover:bg-blue-100 transition-colors">
        Photography
      </button>
      <button class="px-6 py-2 rounded-full text-blue-700 hover:bg-blue-100 transition-colors">
        Workshops
      </button>
      <button class="px-6 py-2 rounded-full text-blue-700 hover:bg-blue-100 transition-colors">
        Events
      </button>
    </div>

    <!-- Archive Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {archives.map((item) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow group">
          <!-- Archive Image -->
          <div class="h-64 relative overflow-hidden">
            {item.data.type === 'photography' && (
              <div class="h-full bg-gradient-to-br from-pink-400 via-purple-500 to-indigo-600"></div>
            )}
            {item.data.type === 'workshop' && (
              <div class="h-full bg-gradient-to-br from-green-400 via-blue-500 to-teal-600"></div>
            )}
            {item.data.type === 'event' && (
              <div class="h-full bg-gradient-to-br from-orange-400 via-red-500 to-pink-600"></div>
            )}
            
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
            
            <!-- Type Badge -->
            <div class="absolute top-4 left-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/90 backdrop-blur-sm">
                {item.data.type === 'photography' && 'ðŸ“¸ Photography'}
                {item.data.type === 'workshop' && 'ðŸŽ“ Workshop'}
                {item.data.type === 'event' && 'ðŸŽµ Event'}
              </span>
            </div>
            
            <!-- Date -->
            <div class="absolute bottom-4 right-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/90 backdrop-blur-sm text-gray-800">
                {item.data.date.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short'
                })}
              </span>
            </div>
          </div>
          
          <!-- Archive Details -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-blue-900 mb-3 leading-tight">
              {item.data.title}
            </h3>
            
            <p class="text-blue-700 text-sm mb-4 line-clamp-3">
              {item.data.description}
            </p>
            
            <div class="flex items-center justify-between">
              <a 
                href={`/archive/${item.slug}`}
                class="inline-flex items-center text-green-600 hover:text-green-700 font-medium text-sm transition-colors"
              >
                View Details â†’
              </a>
              <time class="text-xs text-blue-600" datetime={item.data.date.toISOString()}>
                {item.data.date.toLocaleDateString('en-US', { 
                  month: 'long',
                  day: 'numeric',
                  year: 'numeric'
                })}
              </time>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Archive Mission -->
    <div class="mt-16 bg-gradient-to-r from-blue-900 to-indigo-900 text-white rounded-lg p-8 md:p-12">
      <div class="max-w-3xl mx-auto text-center">
        <h3 class="text-2xl md:text-3xl font-bold mb-6">Documenting Our Journey</h3>
        <p class="text-blue-100 text-lg leading-relaxed">
          Our archive preserves the moments, workshops, and collaborations that define Places. 
          From educational workshops to photography projects, these entries capture our 
          community's growth and creative evolution.
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>