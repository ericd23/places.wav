---
import Layout from '../../layouts/Layout.astro';
import EmbedPlayer from '../../components/EmbedPlayer.astro';
import TagList from '../../components/TagList.astro';
import ArtistList from '../../components/ArtistList.astro';
import { formatDate } from '../../utils/dateFormatter';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const mixes = await getCollection('mixes');
  return mixes.map((mix) => ({
    params: { slug: mix.slug },
    props: { mix },
  }));
}

const { mix } = Astro.props;
const { Content } = await mix.render();
---

<Layout title={`${mix.data.title} - ${mix.data.artist} - Places`} variant="wide">
    <header class="mb-8">
      <h1 class="text-2xl mb-2">
        {mix.data.title}
      </h1>
      <div class="text-sm text-gray-700 mb-4">
        <ArtistList artists={mix.data.artists} />
      </div>
      <div class="flex justify-between items-center mb-8">
        <div class="text-xs text-gray-500">
          {formatDate(mix.data.date, 'long')}
        </div>
        <TagList tags={mix.data.tags} class="flex gap-2" />
      </div>
    </header>

    {mix.data.media_url && (
      <EmbedPlayer url={mix.data.media_url} />
    )}

    <article class="markdown-body text-sm leading-relaxed text-black">
      <Content />
    </article>

</Layout>