---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all archive entries, sorted by date (newest first)
// const archives = await getCollection('archive');
// archives.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Placeholder data based on Places analysis
const archives = [
  {
    slug: 'triumvirate-photo',
    data: {
      title: 'Triumvirate Photo',
      type: 'photography',
      date: new Date('2024-06-01'),
      description: 'Photography series featuring model Paige Paton with 15 photographic images in a grid layout.',
      images: ['/placeholder-photo.jpg']
    }
  },
  {
    slug: 'workshop',
    data: {
      title: 'Hear It From the Front - DJ Workshops',
      type: 'workshop',
      date: new Date('2024-04-30'),
      description: 'DJ Workshop Cohort documentation. Three-month series with Hamilton Artists Inc. facilitated by Dunaway and Peachface Lovedeep.',
      images: ['/placeholder-workshop.jpg']
    }
  },
  {
    slug: 'music-for-thursday-july',
    data: {
      title: 'Music for Thursday - July',
      type: 'event',
      date: new Date('2024-07-15'),
      description: 'Music event archive featuring performances and community gathering documentation.',
      images: ['/placeholder-event.jpg']
    }
  }
];
---

<Layout title="Archive - Places" description="Photography, workshops, events, and historical documentation">
  <div class="p-4 max-w-2xl">
    <h1 class="text-2xl mb-8">Archive</h1>
    
    <div class="space-y-4">
      {archives.map((item) => (
        <div class="border-b border-gray-800 pb-4">
          <div class="flex justify-between items-start mb-2">
            <div>
              <h2 class="text-lg mb-1">
                <a href={`/archive/${item.slug}`} class="hover:text-gray-300">
                  {item.data.title}
                </a>
              </h2>
              <p class="text-sm text-gray-400">{item.data.type}</p>
            </div>
            <span class="text-xs text-gray-500">
              {item.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short'
              })}
            </span>
          </div>
          <p class="text-xs text-gray-500 mt-2">
            {item.data.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</Layout>