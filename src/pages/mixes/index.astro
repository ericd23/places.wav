---
import Layout from '../../layouts/Layout.astro';
import CollectionGrid from '../../components/CollectionGrid.astro';
import { getCollection } from 'astro:content';

// Get all mixes, sorted by date (newest first)
const mixes = await getCollection('mixes');
mixes.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Mixes" variant="wide">
    <h1 class="text-2xl mb-8">Mixes</h1>
    
    <CollectionGrid items={mixes} collection="mixes" showCount={false} />
</Layout>