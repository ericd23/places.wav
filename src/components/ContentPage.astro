---
import Layout from '../layouts/Layout.astro';
import EmbedPlayer from './EmbedPlayer.astro';
import TagList from './TagList.astro';
import ArtistList from './ArtistList.astro';
import { formatDate } from '../utils/dateFormatter';

export interface Props {
  item: any;
  collection: 'mixes' | 'conversations' | 'archive';
  Content: any;
}

const { item, collection, Content } = Astro.props;

function getPageTitle(item: any, collection: string) {
  if (collection === 'conversations') {
    return `Convo ${item.data.number.toString().padStart(3, '0')}: ${item.data.title} - Places`;
  }
  if (collection === 'mixes') {
    return `${item.data.title} - ${item.data.artists.join(', ')} - Places`;
  }
  return `${item.data.title} - Archive - Places`;
}

function getHeaderTitle(item: any, collection: string) {
  if (collection === 'conversations') {
    return `Convo ${item.data.number.toString().padStart(3, '0')}: ${item.data.title}`;
  }
  return item.data.title;
}

function shouldShowArtists(collection: string) {
  return collection === 'mixes' || collection === 'conversations';
}
---

<Layout title={getPageTitle(item, collection)} variant="wide">
    <header class="mb-8">
      <h1 class="text-2xl mb-2">
        {getHeaderTitle(item, collection)}
      </h1>
      {shouldShowArtists(collection) && (
        <div class="text-sm text-gray-700 mb-4">
          <ArtistList artists={item.data.artists} />
        </div>
      )}
      <div class="flex justify-between items-center mb-8">
        <div class="text-xs text-gray-500">
          {formatDate(item.data.date, 'long')}
        </div>
        <TagList tags={item.data.tags} class="flex gap-2" />
      </div>
    </header>

    {item.data.media_url && (
      <EmbedPlayer url={item.data.media_url} />
    )}

    <article class="markdown-body text-sm leading-relaxed text-black">
      <Content />
    </article>
</Layout>