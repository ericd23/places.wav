---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Hamilton DJ collective focusing on democratizing DJ practices and music education." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full bg-white text-black font-mono">
    <div class="min-h-full max-w-4xl mx-auto">
      <header class="fixed top-0 left-0 right-0 z-10 bg-white border-b border-gray-200">
        <nav class="flex items-center justify-between p-4 text-sm max-w-4xl mx-auto">
          <a href="/" class="text-black hover:text-gray-600">PLACES</a>
          <div class="flex space-x-6">
            <a href="/mixes" class="text-black hover:text-gray-600">Mixes</a>
            <a href="/convo" class="text-black hover:text-gray-600">Convo</a>
            <a href="/archive" class="text-black hover:text-gray-600">Archive</a>
            <a href="/about" class="text-black hover:text-gray-600">About</a>
          </div>
        </nav>
      </header>
      
      <main class="pt-16">
        <slot />
      </main>
      
      <footer class="p-4 text-xs text-gray-500 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <span>Hamilton DJ collective</span>
          <div class="flex space-x-4">
            <a href="https://instagram.com/places.wav" target="_blank" rel="noopener noreferrer" class="hover:text-black">Instagram</a>
            <a href="https://discord.gg/Z3FX6376pS" target="_blank" rel="noopener noreferrer" class="hover:text-black">Discord</a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  /* Import Tailwind styles */
  @import '../styles/global.css';
</style>