---
import Layout from '../../layouts/Layout.astro';

import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const mixes = await getCollection('mixes');
  return mixes.map((mix) => ({
    params: { slug: mix.slug },
    props: { mix },
  }));
}

const { mix } = Astro.props;
const { Content } = await mix.render();
---

<Layout title={`${mix.data.title} - ${mix.data.artist} - Places`}>
  <div class="p-4 max-w-2xl">
    <nav class="mb-8">
      <a href="/mixes" class="text-gray-600 hover:text-black text-sm">
        ‚Üê Back
      </a>
    </nav>

    <header class="mb-8">
      <h1 class="text-2xl mb-2">
        {mix.data.title}
      </h1>
      <div class="text-sm text-gray-600 mb-4">
        by {mix.data.artist}
      </div>
      <div class="flex justify-between items-center mb-4">
        <div class="text-xs text-gray-500">
          {mix.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long',
            day: 'numeric'
          })}
        </div>
        {mix.data.tags && mix.data.tags.length > 0 && (
          <div class="flex gap-2">
            {mix.data.tags.map((tag) => (
              <a 
                href={`/tags/${tag}`}
                class="text-xs text-gray-500 hover:text-black"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </div>
      <div class="mb-8">
        <a 
          href={mix.data.external_link || '#'} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-black text-sm"
        >
          Listen
        </a>
      </div>
    </header>

    <article class="text-sm leading-relaxed text-gray-700">
      <div class="prose prose-sm max-w-none">
        <Content />
      </div>
    </article>

    <nav class="mt-8 pt-4 border-t border-gray-200">
      <a href="/mixes" class="text-gray-600 hover:text-black text-sm">
        All mixes
      </a>
    </nav>
  </div>
</Layout>