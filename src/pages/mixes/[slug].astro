---
import Layout from '../../layouts/Layout.astro';
import EmbedPlayer from '../../components/EmbedPlayer.astro';

import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const mixes = await getCollection('mixes');
  return mixes.map((mix) => ({
    params: { slug: mix.slug },
    props: { mix },
  }));
}

const { mix } = Astro.props;
const { Content } = await mix.render();
---

<Layout title={`${mix.data.title} - ${mix.data.artist} - Places`} variant="wide">
    <header class="mb-8">
      <h1 class="text-2xl mb-2">
        {mix.data.title}
      </h1>
      <div class="text-sm text-gray-700 mb-4">
        by {mix.data.artist}
      </div>
      <div class="flex justify-between items-center mb-4">
        <div class="text-xs text-gray-500">
          {mix.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long',
            day: 'numeric'
          })}
        </div>
        {mix.data.tags && mix.data.tags.length > 0 && (
          <div class="flex gap-2">
            {mix.data.tags.map((tag) => (
              <a 
                href={`/tags/${tag}`}
                class="text-xs text-gray-500 hover:text-black"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </div>
      <div class="mb-8">
        <a 
          href={mix.data.external_link || '#'} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-black text-sm"
        >
          Listen
        </a>
      </div>
    </header>

    {mix.data.embed_url && (
      <EmbedPlayer url={mix.data.embed_url} />
    )}

    <article class="markdown-body text-sm leading-relaxed text-black">
      <Content />
    </article>

</Layout>