---
import Layout from '../../layouts/Layout.astro';
import CoverImage from '../../components/CoverImage.astro';
import { getCollection } from 'astro:content';

// Get all archive entries, sorted by date (newest first)
const archives = await getCollection('archive');
archives.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Archive - Places" description="Photography, workshops, events, and historical documentation">
  <div class="p-4 max-w-6xl mx-auto">
    <h1 class="text-2xl mb-8">Archive</h1>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {archives.map((item) => (
        <div class="group">
          <a href={`/archive/${item.slug}`} class="block">
            <div class="mb-3">
              {item.data.cover ? (
                <CoverImage 
                  collection="archive"
                  slug={item.slug}
                  cover={item.data.cover}
                  alt={item.data.title}
                  class="w-full"
                />
              ) : (
                <div class="aspect-square bg-gray-200 flex items-center justify-center w-full">
                  <span class="text-gray-400 text-sm">No cover</span>
                </div>
              )}
            </div>
            <h2 class="text-lg mb-1 group-hover:text-gray-600">
              {item.data.title}
            </h2>
            <p class="text-sm text-gray-600 mb-1">{item.data.type}</p>
            <p class="text-xs text-gray-500 mb-2">
              {item.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short'
              })}
            </p>
            <p class="text-xs text-gray-500 mb-2">
              {item.data.description}
            </p>
            
            {item.data.tags && item.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-1">
                {item.data.tags.map((tag) => (
                  <a 
                    href={`/tags/${tag}`}
                    class="text-xs text-gray-500 hover:text-black"
                    onclick="event.stopPropagation()"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            )}
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>