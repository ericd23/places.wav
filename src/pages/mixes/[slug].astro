---
import ContentPage from '../../components/ContentPage.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const mixes = await getCollection('mixes');
  return mixes.map((mix) => ({
    params: { slug: mix.slug },
    props: { mix },
  }));
}

const { mix } = Astro.props;
const { Content } = await mix.render();
---

<ContentPage item={mix} collection="mixes" Content={Content} />