---
export interface Props {
  tags?: string[];
  currentTag?: string;
  class?: string;
}

const { tags, currentTag, class: className = 'flex flex-wrap gap-1 mt-2' } = Astro.props;
---

{tags && tags.length > 0 && (
  <div class={className}>
    {tags.map((tag) => (
      <a 
        href={`/tag/${tag}`}
        class={`text-xs ${
          currentTag && tag === currentTag 
            ? 'text-black font-medium' 
            : 'text-gray-500 hover:text-black'
        }`}
        onclick="event.stopPropagation()"
      >
        #{tag}
      </a>
    ))}
  </div>
)}